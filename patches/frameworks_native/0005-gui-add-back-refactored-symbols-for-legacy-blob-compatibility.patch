+}
+
+status_t BufferItemConsumer::setDefaultBufferDataSpace(
+        android_dataspace defaultDataSpace) {
+    return ConsumerBase::setDefaultBufferDataSpace(defaultDataSpace);
+}
+
 } // namespace android
